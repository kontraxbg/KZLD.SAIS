@model IEnumerable<SAIS.Portal.Util.AlertUtil.AlertModel>

@foreach (var alert in Model)
{
    var alertStyle = alert.AlertStyle;
    switch (alert.AlertStyle)
    {
        case "info": alertStyle = "info-circle"; break;
        case "success": alertStyle = "check-circle"; break;
        case "warning": alertStyle = "exclamation-triangle"; break;
        case "danger": alertStyle = "ban"; break;
    }
    var dismissableClass = alert.IsDismissable ? "alert-dismissable" : null;
    <div class="alert alert-@alert.AlertStyle @dismissableClass">
        <i class="fa fa-@alertStyle"></i>
        @if (alert.IsDismissable)
        {
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        }
        @Html.Raw(alert.Message/*.NewLineToBr()*/)
    </div>
}
