@model SAIS.Model.PersonModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-antiforgery="true">
    <input2 type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    @*                <label2 asp-for="Person" class="col-md-12" />*@
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <label2 asp-for="FirstName" class="col-md-3 text-md-right" />
                        <div class="col-md-8">
                            <input2 asp-for="FirstName" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label2 asp-for="MiddleName" class="col-md-3 text-md-right" />
                        <div class="col-md-8">
                            <input2 asp-for="MiddleName" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label2 asp-for="LastName" class="col-md-3 text-md-right" />
                        <div class="col-md-8">
                            <input2 asp-for="LastName" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <button2 type="submit" class="btn-primary col-2">Запис</button2>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script src="~/lib/js/knockout.js"></script>

    <script src="~/js/app.knockout.js"></script>
    <script src="~/js/knockout-select2.js"></script>
    <script src="~/js/app.js"></script>

    <script>
        $(function () {
            mainViewModel = new MainViewModel();
            ko.applyBindings(mainViewModel);
        });
    </script>
}
